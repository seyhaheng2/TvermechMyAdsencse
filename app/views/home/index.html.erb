
<div class="main-content-w">
<div id="google_translate_element"></div><script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
}
</script><script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

<div class="main-content-i">  
	<div class="content side-padded-content">
		<div id="primary-content" class="index-isotope v3" data-layout-mode="masonry">
		<% @posts.each do |post| %>
			<div class="item-isotope">
				<article id="post-161" class="post-161 post type-post status-publish format-standard has-post-thumbnail hentry category-image-text tag-jam tag-orange pluto-post-box" style="width:auto;">
					<div class="post-body">
						<div class="post-top-share">
							<i class="fa os-icon-plus share-activator-icon share-activator"></i>
							<span class="share-activator-label share-activator caption">Share</span>
							<div class="os_social-head-w">
							<div class="os_social">
							<%= social_share_button_tag(post.name, :popup => "true") %>
							</div>
							</div>
						</div>
						
<% if post.video.present? %>

<div class="cont">
		<div class="post-media-body">
							<div class="figure-link-w">
								<figure>
									<%= (post.video).html_safe %>
								</figure>
							
							</div>
						</div>
</div>

<% else %>
		<div class="post-media-body">
							<div class="figure-link-w">
							<%= link_to home_show_path(id: post.id),class: "figure-link" do %>
								<figure>
									<%= image_tag post.image, class: "attachment-pluto-index-width wp-post-image", size: "400x299" %>
									<div class="figure-shade"></div>
									<i class="figure-icon os-icon-thin-044_visability_view_watch_eye"></i>
								</figure>
							<% end %>
							</div>
						</div>

<% end %>
				

						<div class="post-content-body">
							<h4 class="post-title entry-title"><%= link_to truncate(post.name, length: 60), home_show_path(id: post.id) %>	 </h4>
							<div class="post-content entry-summary">
							 <%= truncate( raw( sanitize(post.description, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 120, :omission => "...") %>
							<div class="read-more-link">
							<%= link_to "Read More", home_show_path(id: post.id) %>



						<div class="meta-date pull-right">
							<i class="fa os-icon-clock-o"></i>
							<time class="entry-date updated" datetime="2014-05-05T21:26:35+00:00">
							 <% if post.created_at > Time.now.beginning_of_day %>
                                 <%="#{time_ago_in_words(post.created_at)} "%> 
                              <% else %> 
                                 <%= post.created_at.strftime("%b %d, %Y") %>
                              <% end %>
							</time>
						</div>

</div>							</div>
						</div>
					</div>
					<div class="post-meta entry-meta">
						<ul class="post-categories">
							<li>
							<%= link_to post.category.name %>
							</li></ul>                              

						<div class="meta-like">
							<a href="#" class="zilla-likes" id="zilla-likes-161" title="Like this"><i class="os-icon-thin-044_visability_view_watch_eye"></i> <span class="zilla-like-count"><span class="zilla-likes-count"><%= post.countclick %></span> <span class="zilla-likes-postfix"></span></span></a>                      </div>



						</div>
					</article>
			</div> 
			<% end %>
		</div>


                    
      <div class="pagination-w hide-for-isotope">
                  <%= will_paginate @posts %>
	 	 </div>




			<footer class="site-footer" role="contentinfo">
				<div class="site-info">
					<div class="site-footer-i">
						Copyright Tvermech Website. 2014      </div>
					</div>
				</footer>
			</div>
		</div>

